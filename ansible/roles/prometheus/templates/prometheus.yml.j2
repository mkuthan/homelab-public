global:
  scrape_interval: 30s
  evaluation_interval: 30s

scrape_configs:
  - job_name: "pve-exporter"
    static_configs:
      - targets: ["localhost:9221"]
    metrics_path: /pve
    params:
      target: {{ prometheus_pve_exporter_targets }}

  - job_name: "nut-exporter"
    static_configs:
      - targets: ["localhost:9199"]
    metrics_path: /ups_metrics
    params:
      server: {{ prometheus_nut_exporter_targets }}

{% for config in prometheus_scrape_configs %}
  - job_name: "{{ config.job_name }}"
    static_configs:
      - targets: {{ config.targets }}
    metrics_path: {{ config.metrics_path | default('/metrics') }}
{% endfor %}

